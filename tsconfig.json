{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "composite": true,
    "downlevelIteration": true,
    "lib": ["es5", "dom", "dom.iterable"]
  },
  "include": [
    "./src/app.ts",
    // "./src/server.ts",
    "./src/**/*",
    "./src/**/**/*.ts",
    "./src/**/**/**/*.ts"
  ],
  "exclude": ["./node_modules", "**/*.test.ts", "**/*.spec.ts"]
}
